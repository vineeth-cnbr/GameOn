<% include nav.ejs %>
<div class="container">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="carousel">
                <% for(var i=0;i<pgs.length;i++) { %>
                <a class="carousel-item" href="/playgrounds/<%=pgs[i]._id%>"><img class="responsive-img" src="<%=pgs[i].img%>"></a>
                <% } %>
            </div>
        </div>
    </div>
    <div class="row">
        <% for(var i=0;i<pgs.length;i++) { %>
        <div class="col s12 l6">
                <div class="card horizontal">
                        <div class="card-image" style="width: 40%; height:100%;">
                          <a class="item" href="/playgrounds/<%=pgs[i]._id%>"><img class="responisve-img" src="<%=pgs[i].img%>"></a>
                        </div>
                        <div class="card-stacked">
                          <div class="card-content">
                            <h5><%=pgs[i].name%></h5>  
                            <h6><%=pgs[i].area%></h6>
                          </div>
                          <div class="card-action">
                            <a style="color: #3a9715" href="/playgrounds/<%=pgs[i]._id%>">View Ground</a>  
                            <a style="color: #3a9715" href ="/book/<%=pgs[i]._id%>">Book</a>
                          </div>
                        </div>
                </div>
        </div>
        <% } %>
    </div>
</div>

<% include foot.ejs %>